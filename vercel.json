{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {"src": "/api/auth/login", "dest": "/api/auth/login.js"},
    {"src": "/api/auth/me", "dest": "/api/auth/me.js"},
    {"src": "/api/auth/register", "dest": "/api/auth/register.js"},
    {"src": "/api/products/import", "dest": "/api/products/import.js"},
    {"src": "/api/products", "dest": "/api/products/index.js"},
    {"src": "/api/products/scrape", "dest": "/api/products/scrape.js"},
    {"src": "/api/research/analyze", "dest": "/api/research/analyze.js"}
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}